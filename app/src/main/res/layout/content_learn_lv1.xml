                        android:layout_height="wrap_content"
                        android:text="Hidung"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/lv1_txt8_en"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nose"
                        android:gravity="center"
                        android:visibility="gone"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lv1_btn9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorPrimary"
                    android:layout_margin="5dp"
                    android:onClick="partOnClick">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_tooth"
                        android:contentDescription="@string/image_body"
                        android:scaleType="center"/>
                    <TextView
                        android:id="@+id/lv1_txt9_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gigi"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/lv1_txt9_en"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tooth"
                        android:gravity="center"
                        android:visibility="gone"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lv1_btn10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorPrimary"
                    android:layout_margin="5dp"
                    android:onClick="partOnClick">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_ear"
                        android:contentDescription="@string/image_body"
                        android:scaleType="center"/>
                    <TextView
                        android:id="@+id/lv1_txt10_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Telinga"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/lv1_txt10_en"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Eear"
                        android:gravity="center"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>